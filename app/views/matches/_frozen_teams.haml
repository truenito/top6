.col-md-12
  %h3.heading-centered{style: 'color: green;'} blue TEAM
  .col-md-3.pull-right{style: 'padding: 0;'}
    %h6{style: 'text-align: right;'}
      Average MMR:
      = @blue_team_avg
  .col-md-3.pull-right{style: 'padding: 0;'}
    %h6{style: 'text-align: right;'}
      Win:
      +
      = @rating_change[:red]
      ="/"
      ="-"
      Lose:
      = @rating_change[:blue]
  .col-md-12.job-listing-full{style: 'padding-top: 0px;'}
    .clearfix
    .job-list-head.clearfix.animated{"data-animation" => "fadeInUp", "data-animation-delay" => "100"}
      %ul.job-listings
        - @blue_team.each do |player|
          %li.animated{"data-animation" => "fadeInUp", "data-animation-delay" => "100"}
            .title
              %span.prof-photo
                = link_to(image_tag('avatars/blue.png'), "/user/#{player['name']}")
              %span.designation
                = link_to("/user/#{player['name']}") do
                  = player['name']
                  = image_tag('reported.png', {class: 'mini-badge-icon-circle',  alt: 'Report贸', title: 'Report贸'} )
                %br
                = player['name']
            .location
              rating:
              = player['rating']
            .location{:class => ("captain" if @blue_captain_id == player['id'].to_i)}= @blue_captain_id == player['id'].to_i ? "CAPTAIN" : "player"
            .create= player['status']
            .create= "W:#{player['win_count'].to_i} / L:#{player['lose_count'].to_i}"
